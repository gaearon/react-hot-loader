{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "ci": "yarn bootstrap && yarn build && yarn lint && yarn test --coverage && codecov",
    "dev": "yarn bootstrap && yarn build && lerna-watch",
    "build": "lerna-build",
    "format": "prettier --write \"**/*.{js,md,ts,json}\" *.{js,md,ts,json}",
    "lint": "eslint .",
    "prebuild": "rm -rf packages/*/lib",
    "precommit": "lint-staged",
    "test": "yarn test:es2015 && yarn test:modern",
    "test:es2015": "BABEL_TARGET=es2015 jest",
    "test:modern": "BABEL_TARGET=modern jest"
  },
  "lint-staged": {
    "*.{js,md,ts,json}": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-core": "^6.7.6",
    "babel-eslint": "^8.1.2",
    "babel-jest": "^22.0.4",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.5.0",
    "cd": "^0.3.3",
    "codecov": "^3.0.0",
    "create-react-class": "^15.6.2",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lerna": "^2.4.0",
    "lerna-tools": "^0.0.3",
    "lint-staged": "^6.0.0",
    "mocha": "^4.0.1",
    "prettier": "^1.9.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-mount": "^0.1.3",
    "react-test-renderer": "^16.0.0",
    "recompose": "^0.26.0",
    "rimraf": "^2.5.2"
  },
  "engines": {
    "node": ">= 6"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "setupFiles": [
      "<rootDir>/testConfig/setupTests.js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/testConfig/babel.js"
    }
  },
  "dependencies": {}
}
